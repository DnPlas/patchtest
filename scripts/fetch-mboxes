# 51 Franklin Street, Fifth Floor, Boston, MA 02110-1301 USA.

# defaults values
repodir=''
mboxdir='.'
since=''

function usage() {
    cat << EOF
\$ $(basename $0) -r <repodir> -m <mboxdir> -s <timestamp> [<series[.revision]> ...]

where

    <repodir>            : Repository
    <mboxdir>            : Directory where mboxes are stored. Defaults to $mboxdir
    <timestamp>          : Poll events since the defined timestamp
    <series[.revision]>  : Series id, with an optional revision. If not given,
                           it will poll-events using <timestamp> or using the one from the .git-pw file
EOF
>&2

    exit 1
}

while getopts ":r:m:s:h" opt; do
    case $opt in
	r)
	    repodir=$OPTARG
	    ;;
	m)
	    mboxdir=$OPTARG
	    ;;
	s)
	    since=$OPTARG
	    ;;
	h)
	    usage
	    ;;
	\?)
	    echo "Invalid option: -$OPTARG" >&2
	    usage
	    ;;
	:)
	    echo "Option -$OPTARG requires an argument." >&2
	    usage
	    ;;
    esac
done
shift $((OPTIND-1))

[ -z "$repodir" ]   && { echo "Indicate the repository"; usage; }
[ ! -d $repodir ]   && { echo "Repository does not exit"; usage; }

repodir=$(realpath -e $repodir)
series="$@"

# events come in pairs separated by a dot
if [ -z "$series" ]; then
    series="$(poll-events $repodir $since)"
fi

if [ -n "$series" ]; then

    # create the mbox directory in case it does not exit
    test ! -d "$mboxdir" && { mkdir -p $mboxdir; }

    # get the real path
    mboxdir=$(realpath -e $mboxdir)

    # fetch series
    for s in $series; do
	sid="$(echo $s | cut -d. -f1)"
	cmd="git pw mbox $sid --link --link-name $s"
	# in case there is revision, consider it
	if echo $s | grep '\.' --quiet; then
	    rid="$(echo $s | cut -d. -f2)"
	    cmd="$cmd --revision $rid"
	    mboxfile="$mboxdir/$sid.$rid.mbox"
	    echo -e "Series/Revision $sid/$rid"
	else
	    mboxfile="$mboxdir/$sid.mbox"
	    echo -e "Series/Revision $sid/latest"
	fi
	( cd $repodir
	  $cmd > $mboxfile
	)
	echo -e "\tStore into $mboxdir"
	echo -e ""
    done
else
    echo -e "No new series events"
fi
