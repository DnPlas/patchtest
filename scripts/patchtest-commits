usage() {
    echo -e "Runs patchtest starting at certain commit using the specified test suite"
    echo -e "\$ $(basename $0) <since commit> <repository> <path to the discover start directory on the test suite>"
    echo
    echo -e "For example, test last 10 commits"
    echo
    echo -e "\$ $(basename $0) HEAD~10 $HOME/poky $HOME/patchtest-oe/tests"
    echo
    exit 1
}

#Check the number of arguments
NUMARGS=$#
if [ ! $NUMARGS -eq 3 ]; then
    usage
fi

since=$1
repo_dir=$(readlink -ev $2)
start_dir=$(readlink -ev $3)

[ ! -d $repo_dir ]  && { echo "Repository does not exit"; usage; }
[ ! -d $start_dir ] && { echo "Test suite starting directory does not exist"; usage; }

old_dir=$PWD

( cd $repo_dir;
  for commit in $(git rev-list $since..HEAD --reverse); do
     echo "Testing commit ${commit}"
     git format-patch "$commit^1..$commit" --stdout | \
	 patchtest - --base-commit "$commit^1" \
		   --repo-dir $repo_dir \
		   --start-dir $start_dir
  done
)

